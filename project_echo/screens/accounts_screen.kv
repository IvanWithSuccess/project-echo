<AccountsPanel>:
    orientation: "vertical"
    spacing: "10dp"
    padding: "10dp"

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: '48dp'
        spacing: "10dp"

        Button:
            text: "Add Account"
            on_release: app.go_to_login()
            size_hint_x: None
            width: '150dp'

        Label:
            text: "Your Telegram Accounts"
            font_size: '20sp'
            halign: "center"
            valign: "middle"

    # A simple separator line
    Widget:
        size_hint_y: None
        height: '1dp'
        canvas:
            Color:
                rgba: 0.7, 0.7, 0.7, 1
            Rectangle:
                pos: self.pos
                size: self.size

    ScrollView:
        BoxLayout:
            id: accounts_list
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
