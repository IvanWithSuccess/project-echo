<AccountsPanel>
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        # --- Header with Title and Add Button ---
        MDBoxLayout:
            adaptive_height: True
            spacing: dp(10)

            MDLabel:
                text: "Accounts"
                font_style: "H6"
                adaptive_height: True

            MDIconButton:
                icon: 'plus'
                # FIX: Removed `style="standard"` which is not available in KivyMD 1.2.0
                on_release: root.add_account()

        # --- Scrollable List of Accounts ---
        ScrollView:
            MDList:
                id: account_list
