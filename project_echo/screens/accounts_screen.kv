<AccountsPanel>:
    orientation: "vertical"
    spacing: "10dp"
    padding: "10dp"

    MDBoxLayout:
        orientation: "horizontal"
        adaptive_height: True
        spacing: "10dp"

        MDFillRoundFlatButton:
            text: "Add Account"
            icon: "account-plus"
            on_release: app.root.ids.screen_manager.current = 'login_screen'
            pos_hint: {"center_y": 0.5}

        MDLabel:
            text: "Your Telegram Accounts"
            font_style: "H6"
            halign: "center"
            valign: "middle"

    MDSeparator:

    # FIX: Added the missing ScrollView and MDList with the correct id
    MDScrollView:
        MDList:
            id: accounts_list
