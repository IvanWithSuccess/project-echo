<AccountsPanel>:
    orientation: "vertical"
    spacing: "10dp"
    padding: "10dp"

    MDBoxLayout:
        orientation: "horizontal"
        adaptive_height: True
        spacing: "10dp"

        MDFillRoundFlatButton:
            text: "Add Account"
            icon: "account-plus"
            # FIX: Changed the direct, failing call to a dedicated app method for robustness.
            on_release: app.go_to_login()
            pos_hint: {"center_y": 0.5}

        MDLabel:
            text: "Your Telegram Accounts"
            font_style: "H6"
            halign: "center"
            valign: "middle"

    MDSeparator:

    MDScrollView:
        MDList:
            id: accounts_list
