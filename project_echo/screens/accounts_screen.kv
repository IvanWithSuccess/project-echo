<AccountsPanel>:
    MDRelativeLayout:
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(24)
            spacing: dp(24)

            MDLabel:
                text: "Accounts Management"
                font_style: "H4"
                adaptive_height: True
                padding: [0, dp(12)]

            # Container for the data table
            MDBoxLayout:
                id: table_container

        MDFloatingActionButton:
            icon: "plus"
            pos_hint: {"right": 1, "bottom": 1}
            x: -dp(16)
            y: dp(16)
            md_bg_color: app.theme_cls.primary_color
            on_release: root.show_add_account_dialog()
