<AccountsPanel>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(24)
        spacing: dp(24)

        MDLabel:
            text: "Accounts Management"
            font_style: "H5"
            adaptive_height: True
            padding: [0, dp(12)]

        # FIX: Replaced table layout with a ScrollView and MDList
        ScrollView:
            MDList:
                id: account_list
                padding: 0

    # The SpeedDial button remains in the same place
    MDFloatingActionButtonSpeedDial:
        id: speed_dial
        data: root.speed_dial_data
        root_button_anim: True
        callback: root.speed_dial_callback
