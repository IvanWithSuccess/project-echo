<AccountsPanel>
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        # --- Header with Title and Add Button ---
        MDBoxLayout:
            adaptive_height: True
            spacing: dp(10)

            MDLabel:
                text: "Accounts"
                # FIX: Reduced font size from H6 to Subtitle1 as requested
                font_style: "Subtitle1"
                adaptive_height: True

            MDIconButton:
                icon: 'plus'
                on_release: root.add_account()

        # --- Scrollable List of Accounts ---
        ScrollView:
            MDList:
                id: account_list
