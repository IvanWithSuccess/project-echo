
# Declares that this is the UI for the AccountsPanel class
<AccountsPanel>:
    orientation: 'vertical'
    padding: [20, 20, 20, 20]
    spacing: 20

    # --- Toolbar ---
    BoxLayout:
        size_hint_y: None
        height: 48
        spacing: 10

        # FIX: Replaced deprecated MDFillRoundFlatButton with MDButton
        MDButton:
            style: "filled"
            text: "CREATE ACCOUNT"
            icon: "plus"
            pos_hint: {"center_y": 0.5}

        # Spacer
        BoxLayout:

        # FIX: Replaced deprecated MDFlatButton with MDButton
        MDButton:
            id: status_button
            style: "text"
            text: "ANY STATUS"
            pos_hint: {"center_y": 0.5}
            on_release: root.open_status_menu()

    # --- Data Table Placeholder ---
    MDLabel:
        text: "Accounts data table will be here"
        halign: "center"
