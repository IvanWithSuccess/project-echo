<AccountsPanel>:
    # FIX: Use MDRelativeLayout as the root to allow overlaying widgets correctly
    MDRelativeLayout:

        # Main content area
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(24)
            spacing: dp(24)

            MDLabel:
                text: "Accounts Management"
                font_style: "H5"
                adaptive_height: True
                padding: [0, dp(12)]

            ScrollView:
                MDList:
                    id: account_list
                    padding: 0

        # FIX: Replaced SpeedDial with a standard, reliably positioned FAB
        MDFloatingActionButton:
            id: add_button
            icon: "plus"
            on_release: root.open_menu()
            # Position the button in the bottom-right corner with a margin
            x: self.parent.width - self.width - dp(24)
            y: dp(24)
