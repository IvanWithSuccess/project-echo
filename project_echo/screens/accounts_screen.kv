<AccountsPanel>:
    MDRelativeLayout:

        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(24)
            spacing: dp(24)

            MDLabel:
                text: "Accounts Management"
                font_style: "H5"
                adaptive_height: True
                padding: [0, dp(12)]

            ScrollView:
                MDList:
                    id: account_list
                    padding: 0

        MDFloatingActionButton:
            id: add_button
            icon: "plus"
            # FIX: Set a smaller, custom size for the button
            size_hint: (None, None)
            size: (dp(40), dp(40))
            on_release: root.open_menu()
            # Adjust position to be based on the smaller size
            x: self.parent.width - self.width - dp(16)
            y: dp(16)
