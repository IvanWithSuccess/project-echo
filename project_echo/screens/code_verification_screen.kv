<CodeVerificationScreen>:
    name: "code_verification_screen"

    # FIX: Use MDAnchorLayout to properly center the content
    MDAnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: None, None # Let the content decide its size
            adaptive_height: True
            width: "500dp"
            spacing: "20dp"

            # FIX: Added a top layout to hold the back arrow
            MDFloatLayout:
                MDIconButton:
                    icon: "arrow-left"
                    pos_hint: {"top": 1, "x": 0} # Positioned top-left
                    on_release: app.root.ids.screen_manager.current = 'login_screen'

            MDLabel:
                text: "Enter Code"
                halign: 'center'
                font_style: 'H5'
                adaptive_height: True

            MDLabel:
                id: info_label
                text: f"Enter the code sent to {app.phone_to_verify}"
                halign: 'center'
                adaptive_height: True
                theme_text_color: "Secondary"

            MDTextField:
                id: code_field
                hint_text: "Confirmation Code"
                halign: "center"

            MDRaisedButton:
                text: "CONFIRM"
                pos_hint: {'center_x': 0.5}
                on_release: root.verify_code()

    MDSpinner:
        id: spinner
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        active: False
