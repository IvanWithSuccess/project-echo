<CodeVerificationScreen>:
    name: "code_verification_screen"

    MDFloatLayout:

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"top": 0.98, "x": 0.02}
            on_release: app.root.ids.screen_manager.current = 'login_screen'

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_size: True
            width: "300dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            spacing: "20dp"

            MDLabel:
                text: "Enter Code"
                halign: 'center'
                font_style: 'H5'
                adaptive_height: True

            # FINAL, DECLARATIVE FIX: The label's text is now directly bound
            # to the app's 'phone_to_verify' property. This is the correct Kivy way.
            MDLabel:
                id: info_label
                text: f"Enter the code sent to {app.phone_to_verify}"
                halign: 'center'
                adaptive_height: True
                theme_text_color: "Secondary"

            MDTextField:
                id: code_field
                hint_text: "Confirmation Code"
                halign: "center"

            MDTextField:
                id: password_field
                hint_text: "2FA Password (if any)"
                password: True
                halign: "center"
                disabled: True

            MDFillRoundFlatButton:
                text: "CONFIRM"
                pos_hint: {'center_x': 0.5}
                padding: "12dp"
                on_release: root.verify_code()

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            active: False
