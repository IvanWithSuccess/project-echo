<CodeVerificationScreen>:
    name: "code_verification_screen"

    MDFloatLayout:

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"top": 0.98, "x": 0.02}
            on_release: app.root.ids.screen_manager.current = 'login_screen'

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: None  # FIX: Use size_hint_x to allow for a fixed width
            width: "500dp"      # FIX: Put value in quotes as expected by KV lang
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: "20dp"

            MDLabel:
                text: "Enter Code"
                halign: 'center'
                font_style: 'H5'
                adaptive_height: True

            MDLabel:
                id: info_label
                text: f"Enter the code sent to {app.phone_to_verify}"
                halign: 'center'
                adaptive_height: True
                theme_text_color: "Secondary"

            MDTextField:
                id: code_field
                hint_text: "Confirmation Code"
                halign: "center"

            MDRaisedButton:
                text: "CONFIRM"
                pos_hint: {'center_x': 0.5}
                on_release: root.verify_code()

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            active: False
