<CodeVerificationScreen>:
    name: "code_verification_screen"

    # FIX: Use MDFloatLayout as the root to overlay widgets
    MDFloatLayout:

        # 1. The back arrow, positioned at the top-left
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"top": 0.98, "x": 0.02}
            on_release: app.root.ids.screen_manager.current = 'login_screen'

        # 2. The centered content block
        MDAnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                adaptive_height: True
                width: "500dp"
                spacing: "20dp"

                MDLabel:
                    text: "Enter Code"
                    halign: 'center'
                    font_style: 'H5'
                    adaptive_height: True

                MDLabel:
                    id: info_label
                    text: f"Enter the code sent to {app.phone_to_verify}"
                    halign: 'center'
                    adaptive_height: True
                    theme_text_color: "Secondary"

                MDTextField:
                    id: code_field
                    hint_text: "Confirmation Code"
                    halign: "center"

                MDRaisedButton:
                    text: "CONFIRM"
                    pos_hint: {'center_x': 0.5}
                    on_release: root.verify_code()

        # 3. The spinner, also overlaid
        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            active: False
