<LoginScreen>:
    name: "login"

    FloatLayout:
        # The centered content block
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            width: "500dp"
            height: self.minimum_height
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: "20dp"

            Label:
                text: "Sign in to Project Echo"
                font_size: '22sp'
                bold: True
                color: (0, 0, 0, 1)
                size_hint_y: None
                height: self.texture_size[1]

            # Country selection button
            Button:
                id: country_button
                text: root.selected_country_name or "Choose a Country"
                size_hint_y: None
                height: dp(48)
                background_color: (0.9, 0.9, 0.9, 1) # Light gray
                color: (0, 0, 0, 1) # Black text
                on_release: root.show_country_dialog()

            TextInput:
                id: phone_field
                hint_text: "Phone Number"
                multiline: False
                size_hint_y: None
                height: dp(48)
                padding: [dp(10), (dp(48) - self.font_size) / 2]

            Button:
                text: "NEXT"
                size_hint_y: None
                height: dp(48)
                background_color: (0.1, 0.5, 0.8, 1) # A nice blue
                color: (1, 1, 1, 1) # White text
                on_release: root.send_code()

            # This label will act as a spinner/loading indicator
            Label:
                id: spinner_label
                text: ""
                color: (0, 0, 0, 1)
                size_hint_y: None
                height: self.texture_size[1]
