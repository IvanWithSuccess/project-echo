<LoginScreen>:
    name: "login_screen"

    MDFloatLayout:

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"top": 0.98, "x": 0.02}
            on_release: app.root.ids.screen_manager.current = 'accounts'

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_size: True
            width: "300dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            spacing: "20dp"

            MDLabel:
                text: "Sign in to Telegram"
                halign: 'center'
                font_style: 'H5'
                adaptive_height: True

            MDLabel:
                text: "Choose your country and enter your phone number."
                halign: 'center'
                adaptive_height: True
                theme_text_color: "Secondary"

            # FIX: This field now opens a searchable dialog
            MDTextField:
                id: country_field
                hint_text: "Country"
                text: "Ukraine"
                on_focus: if self.focus: root.open_country_dialog()

            MDTextField:
                id: phone_field
                hint_text: "Phone Number"
                text: "+380"

            MDFillRoundFlatButton:
                text: "NEXT"
                pos_hint: {'center_x': 0.5}
                padding: "12dp"
                on_release: root.on_next_button_press()

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            active: False
