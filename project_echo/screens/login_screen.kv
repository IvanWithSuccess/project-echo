<LoginScreen>:

    BoxLayout:
        orientation: 'vertical'
        padding: [dp(20), dp(50), dp(20), dp(50)]
        spacing: dp(30)

        Label:
            text: "Sign in to Project Echo"
            halign: 'center'
            font_size: '24sp'
            bold: True
            size_hint_y: None
            height: self.texture_size[1]

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            size_hint_y: None
            height: self.minimum_height

            TextInput:
                id: country_field
                hint_text: "Country"
                readonly: True
                multiline: False
                on_focus: if self.focus: root.open_country_dialog()
                size_hint_y: None
                height: dp(48)

            TextInput:
                id: phone_field
                hint_text: "Phone Number"
                helper_text: "Include your country code (e.g., +1)"
                multiline: False
                size_hint_y: None
                height: dp(48)

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)

            Button:
                text: "NEXT"
                on_release: root.on_next_button_press()
                size_hint_y: None
                height: dp(48)
                pos_hint: {'center_x': 0.5}

            Spinner:
                id: spinner
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {'center_x': 0.5}
                active: False
