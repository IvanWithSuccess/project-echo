<LoginScreen>:
    id: login_screen
    name: 'login'

    # Center the entire login form
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.5, None # Take 50% of screen width
        height: self.minimum_height
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        spacing: '15dp'

        Label:
            text: 'Sign in to Project Echo'
            font_size: '24sp'
            size_hint_y: None
            height: '40dp'
            color: (0, 0, 0, 1) # Black text
            bold: True
        
        # REMOVED: The country selection button is no longer needed.

        # Phone number input
        TextInput:
            id: phone_field
            hint_text: 'Phone Number (e.g., +1234567890)' # UPDATED placeholder
            multiline: False
            size_hint_y: None
            height: '48dp'
            font_size: '16sp'
            padding: [10, 15, 10, 15]
            background_normal: ''
            background_color: [240/255, 240/255, 240/255, 1]
            cursor_color: [0, 0, 0, 1]
            foreground_color: [0, 0, 0, 1]

        # Next button
        Button:
            text: 'NEXT'
            size_hint_y: None
            height: '48dp'
            on_release: root.send_code()
            background_color: (0.1, 0.3, 0.5, 1) # Dark blue
            color: (1, 1, 1, 1) # White text
            background_normal: ''

        # Spinner/loading label
        Label:
            id: spinner_label
            text: ''
            size_hint_y: None
            height: '20dp'
            color: (0, 0, 0, 1)
