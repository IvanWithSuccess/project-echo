
# =========================================================================
# >> CUSTOM WIDGET DEFINITIONS
# =========================================================================

<NavButton>:
    theme_width: "Custom"
    height: dp(72)
    width: dp(80)
    MDBoxLayout:
        orientation: 'vertical'
        adaptive_size: True
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        spacing: dp(4)
        MDIcon:
            id: icon
            icon: root.icon
            halign: 'center'
            valign: 'middle'
            font_size: dp(24)
        MDLabel:
            text: root.text
            halign: 'center'
            font_style: "Caption"
            adaptive_height: True

# =========================================================================
# >> MAIN LAYOUT KV
# ==========================================================================

MDBoxLayout:
    orientation: 'horizontal'

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: dp(80)
        md_bg_color: self.theme_cls.bg_light
        padding: [dp(4), dp(16), dp(4), 0]
        spacing: dp(16)

        MDLabel:
            text: "Echo"
            font_style: "H6"
            halign: "center"
            adaptive_height: True

        MDBoxLayout:
            id: nav_list
            orientation: 'vertical'
            adaptive_height: True
            spacing: dp(8)

        Widget:
            size_hint_y: 1

    MDSeparator:
        orientation: 'vertical'

    MDScreenManager:
        id: screen_manager
        # FIX: Removed invalid 'transition: "none"' property.
        # This will be set in the main.py file correctly.
