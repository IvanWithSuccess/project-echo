#:kivy 2.0
#:import Window kivy.core.window.Window
#:import NoTransition kivy.uix.screenmanager.NoTransition

# Style for navigation buttons
<NavButton@Button>:
    size_hint_y: None
    height: '60dp'
    # Make background transparent to show the icon image
    background_color: (0, 0, 0, 0)
    # Remove the default button border
    border: (0, 0, 0, 0)
    # Set the normal background to be empty, so it can be defined in the instance
    background_normal: ''
    # Use a slightly darker background on press for visual feedback
    background_down: ''

# --- The ONE Root Widget ---
BoxLayout:
    orientation: 'horizontal'

    # 1. Navigation Panel (Left Side)
    BoxLayout:
        id: nav_panel
        orientation: 'vertical'
        size_hint_x: None
        width: '80dp' # Reduced width for icon-based navigation
        padding: '10dp'
        spacing: '10dp'
        canvas.before:
            Color:
                rgba: (0.95, 0.95, 0.95, 1) # Light gray background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'E'
            font_size: '30sp'
            bold: True
            size_hint_y: None
            height: '48dp'
            color: (0, 0, 0, 1) # Black text

        NavButton:
            id: dashboard_button
            background_normal: 'assets/icons/dashboard.png'
            background_down: 'assets/icons/dashboard.png' # Use same image for pressed state
            on_release: app.switch_panel('dashboard')

        NavButton:
            id: accounts_button
            background_normal: 'assets/icons/accounts.png'
            background_down: 'assets/icons/accounts.png'
            on_release: app.switch_panel('accounts')

        NavButton:
            id: campaigns_button
            background_normal: 'assets/icons/campaigns.png'
            background_down: 'assets/icons/campaigns.png'
            on_release: app.switch_panel('campaigns')

        Widget: # Spacer
            size_hint_y: 1.0

    # 2. Content Panel (Right Side)
    BoxLayout:
        id: content_panel
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1) # White background
            Rectangle:
                pos: self.pos
                size: self.size
        
        ScreenManager:
            id: screen_manager
            transition: NoTransition()

            Screen:
                name: 'dashboard'
                Label:
                    text: "Dashboard content here"
                    color: (0, 0, 0, 1)
            
            Screen:
                name: 'accounts'
                AccountsPanel:
                    id: accounts_panel

            # This screen is now defined, preventing the crash
            Screen:
                name: 'campaigns'
                Label:
                    text: "Campaigns content will be here"
                    color: (0, 0, 0, 1)

            Screen:
                name: 'login'
                LoginScreen:
                    id: login_screen

            Screen:
                name: 'code_verification'
                CodeVerificationScreen:
                    id: code_verification_screen

            Screen:
                name: 'password_verification'
                PasswordVerificationScreen:
                    id: password_verification_screen
